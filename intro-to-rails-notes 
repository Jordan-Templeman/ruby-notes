    --> description
    --> user_id
    -- CRUD --
    -- Create article 
    -- Read article 
    -- Update article 
    -- Delete artilce 
    -- CRUD --
    --> ORM object relational mapper 
        --> ActiveRecord <--
--> create article 
  --> rails generate Article scaffold title:string description:text 
  --> rails routes --expanded 'shows all routes'
  --> rails g migration create_articles
  --> rails db:migrate
  --> undo migration rails db:rollback 
  --> add_column article_name :whats_it_doing, :datetime

  

  

  



